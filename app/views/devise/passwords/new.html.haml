.row
  .col-lg-6.mx-auto.main-column
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      .form-group
        = f.input :email, required: true, autofocus: true, input_html: {class: "form-control", placeholder: "Email"}, label: false
      .form-group
        = f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block"
    = render "devise/shared/links"
